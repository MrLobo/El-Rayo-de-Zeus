<?xml version="1.0" encoding="UTF-8" ?>
<GUILayout>

 <!-- <Window Type="DefaultWindow" Name="rezoZeus" > -->
 <Window Type="OgreTray/StaticImageItem" Name="rezoZeus" >
     <Property Name="UnifiedAreaRect" Value="{{0,0},{0,0},{1,0},{0,44}}" /> <!-- todo el ancho, alto 44px -->
	 <Property Name="Image" Value="set:FondoItem image:fondo" />
	 <Property Name="FrameEnabled" Value="True" />
	 <Property Name="BackgroundEnabled" Value="False" />	 
	 		
	<Window Type="TaharezLook/ImageButton" Name="rezoZeus/btn">
		<Property Name="UnifiedAreaRect" Value="{{0,0},{0,0},{0,45},{0,40}}" />
		<Property Name="UnifiedPosition" Value="{{0,0},{0,4}}" />
		<Property Name="UnifiedSize" Value="{{0,40},{0,40}}" />
		
		<!-- Here we choose what images to take. set:THEButton means they are stored -->
		<!-- in the imageset named THEButton and image:btnNormal specifies wich image it is. -->
		<Property Name="NormalImage"     Value="set:ShopIcons image:rezoZeusNormal" />
		<Property Name="HoverImage"      Value="set:ShopIcons image:rezoZeusHover"  />
		<Property Name="PushedImage"     Value="set:ShopIcons image:rezoZeusPushed" />
		<Property Name="DisabledImage"   Value="set:ShopIcons image:rezoZeusDisabl" />
		
	</Window>

	<Window Type="OgreTray/TitleInShop" Name="rezoZeus/description">
		<Property Name="UnifiedAreaRect" Value="{{0,46},{0,0},{0,146},{0,44}}" />
		<Property Name="Text" Value="Rezo Zeus" />
		<Property Name="AlwaysOnTop" Value="True" />
		<Property Name="Font" Value="DejaVuSans-6bold" />	
		<Property Name="Tooltip" >
			El jugador es capaz de activar al mismo tiempo todos los altares 
			del anillo en el que se encuentre. Una vez que se activan dichos altares
			el efecto de este poder se termina.
		</Property>
	
	</Window>

	<Window Type="OgreTray/TitlePMInShop" Name="rezoZeus/cost">
		<Property Name="UnifiedAreaRect" Value="{{0,151},{0,0},{0,185},{0,44}}" />
		<Property Name="Text" Value="300" />
		<Property Name="AlwaysOnTop" Value="True" />
		<Property Name="Font" Value="DejaVuSans-6bold" />	
	</Window>


</Window>

</GUILayout>