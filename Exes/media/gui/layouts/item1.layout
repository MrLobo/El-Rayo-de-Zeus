<GUILayout>

 <!-- <Window Type="DefaultWindow" Name="Item1" > -->
 <Window Type="OgreTray/StaticImageItem" Name="Item1" >
     <Property Name="UnifiedAreaRect" Value="{{0,0},{0,0},{1,0},{0,44}}" /> <!-- todo el ancho, alto 44px -->
	 <Property Name="Image" Value="set:FondoItem image:fondo" />
<!-- 	 <Property Name="FrameEnabled" Value="True" />
	 <Property Name="BackgroundEnabled" Value="False" /> -->	 
	 		
	<Window Type="TaharezLook/ImageButton" Name="Item1/btnItem1">
		<Property Name="UnifiedAreaRect" Value="{{0,0},{0,0},{0,45},{0,40}}" />
		<Property Name="UnifiedPosition" Value="{{0,0},{0,4}}" />
		<Property Name="UnifiedSize" Value="{{0,40},{0,40}}" />
		
		<!-- Here we choose what images to take. set:THEButton means they are stored -->
		<!-- in the imageset named THEButton and image:btnNormal specifies wich image it is. -->
		<Property Name="NormalImage"     Value="set:ShopItems image:item1Normal" />
		<Property Name="HoverImage"      Value="set:ShopItems image:item1Hover"  />
		<Property Name="PushedImage"     Value="set:ShopItems image:item1Pushed" />
		<Property Name="DisabledImage"   Value="set:ShopItems image:item1Disabl" />
		
	</Window>

	<Window Type="OgreTray/TitleInShop" Name="Item1/Description">
		<Property Name="UnifiedAreaRect" Value="{{0,46},{0,0},{0,146},{0,44}}" />
		<Property Name="Text" Value="Medusa" />
		<Property Name="AlwaysOnTop" Value="True" />
		<Property Name="Font" Value="DejaVuSans-6bold" />	
	<Property Name="Tooltip" >
		Medusa es muy fiera.
		Solo la puedes atacar por detras. Si te ataca de frente te congela
		durante 5 segundos
	</Property>
	
	</Window>

	<Window Type="OgreTray/TitlePMInShop" Name="Item1/costItem1">
		<Property Name="UnifiedAreaRect" Value="{{0,151},{0,0},{0,185},{0,44}}" />
		<Property Name="Text" Value="300" />
		<Property Name="AlwaysOnTop" Value="True" />
		<Property Name="Font" Value="DejaVuSans-6bold" />	
	</Window>


</Window>

</GUILayout>